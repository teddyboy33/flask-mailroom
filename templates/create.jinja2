{% extends 'base.jinja2' %}

{% block subtitle %}Create New Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name_donor">Donor:</label><input id="name_donor" type="text" name="name_donor"></br>
    <label for="donation">Donation:</label><input id="donation" type="number" name="donation"></br>
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}